# Copy to .env and fill in your keys

# Anthropic (Claude) - https://console.anthropic.com
ANTHROPIC_API_KEY=sk-ant-...

# EasyPost - https://www.easypost.com/account/api-keys
# Use TEST key for development (free, no real labels)
EASYPOST_API_KEY=EZTEST...

# Your business address (for "from" address on shipments)
FROM_NAME=Your Business Name
FROM_STREET1=123 Main St
FROM_CITY=New York
FROM_STATE=NY
FROM_ZIP=10001
FROM_PHONE=5551234567

# Shopify OAuth - https://partners.shopify.com
# Create an app in your Partner Dashboard to get these
SHOPIFY_API_KEY=your_api_key
SHOPIFY_API_SECRET=your_api_secret
SHOPIFY_SCOPES=read_orders,write_fulfillments,read_shipping

# Application URL (for OAuth redirect)
# Use ngrok or similar for local development
APP_URL=https://your-app.example.com

# Security keys
# SECRET_KEY: Used for JWT signing (generate with: python -c "import secrets; print(secrets.token_hex(32))")
SECRET_KEY=change-this-in-production
# ENCRYPTION_KEY: Used for encrypting Shopify tokens (generate with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())")
# If not set, derived from SECRET_KEY
# ENCRYPTION_KEY=your-fernet-key
